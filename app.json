{
  "expo": {
    "name": "Hoppn",
    "slug": "hoppn-african-food",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "hoppn",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#F15029"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.hoppn.africanfood",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Hoppn uses your location to find nearby African restaurants and provide accurate pickup times.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Hoppn uses your location to find nearby African restaurants and provide accurate pickup times."
      }
    },
    "android": {
      "package": "com.hoppn.africanfood",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#F15029"
      },
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-font",
      "expo-web-browser",
      "expo-location",
      "expo-notifications",
      [
        "@rnmapbox/maps",
        {
          "mapboxPublicKey": "your_mapbox_public_key_here"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "your-eas-project-id"
      }
    }
  }
}
